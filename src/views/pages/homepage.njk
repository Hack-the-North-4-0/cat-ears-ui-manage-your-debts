{% extends "layouts/base.njk" %}

{% from "breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "button/macro.njk" import govukButton %}

{% block breadcrumbs %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: "Home",
                href: "/"
            }
        ]
    }) }}
{% endblock %}

{% block content_body %}
    <h1 class="govuk-heading-xl">Manage your debts</h1>

    <div class="wrapper">                                                                                                                   > Acct number </p>
        <div class="user-information">
            <h2 class="user-information__title">Hi Cien</h2>
            <p class="user-information__account">ACCOUNT NUMBER</span>
            <p class="user-information__info"> Use <span class="user-information__info--banking">Open Banking</span> to get your available funds.</p>
            <p class="user-information__available-funds">Available Funds: <span class="amount">£xx,xx</span></p>
            <p class="user-information__total-debt">Your Total Debt: <span class="amount">£x,xxx,xx</span></p>
            <p class="user-information__add-account">+ Add Account</p>
            <hr/>
        </div>

        <div class="debt-listings">
            <h2 class="debt-listings__title">Accounts</h2>
            <div class="debt-listing">
                <h3 class="debt-listing__company"> Sky </h2>
                <p class="debt-listing__amount">£xx.xx</p>
                {{ govukButton({
                text: "Pay Now"
                }) }}
            </div>  
        </div>
    </div>

{% endblock %}
