{% extends "layouts/base.njk" %}

{% from "breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "button/macro.njk" import govukButton %}

{% block breadcrumbs %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: "Home",
                href: "/"
            }
        ]
    }) }}
{% endblock %}

{% block content_body %}
    <h1 class="govuk-heading-xl">Manage your debts</h1>

    <div class="wrapper">                                                                                                                   > Acct number </p>
        <div class="user-information">
            <h2 class="user-information__title">Hi Cien</h2>
            <p class="user-information__account">XXXX XXX XX</span>
            <p class="user-information__info"> Use <span class="user-information__info--banking">Open Banking</span> to get your available funds.</p>
            <p class="user-information__available-funds">Available Funds: <span class="amount">£755</span></p>
            <p class="user-information__total-debt">Your Total Debt: <span class="amount">£21,539</span></p>
            <p class="user-information__add-account">+ Add Account</p>
        </div>

        <div class="debt-listings">
            <h2 class="debt-listings__title">Accounts</h2>
            <div class="debt-listing high">
                <h3 class="debt-listing__company"><a class="govuk-link govuk-link--no-visited-state" href="#">Wonga</a></h3>
                <p class="debt-listing__amount">£5,349</p>
                {{ govukButton({
                text: "Pay Now"
                }) }}
            </div>
            <div class="debt-listing medium">
                <h3 class="debt-listing__company">Barclaycard</h3>
                <p class="debt-listing__amount">£9,800</p>
                {{ govukButton({
                text: "Pay Now"
                }) }}
            </div>
            <div class="debt-listing low">
                <h3 class="debt-listing__company"> M&S Finance</h3>
                <p class="debt-listing__amount">£6,390</p>
                {{ govukButton({
                text: "Pay Now"
                }) }}
            </div>
        </div>
    </div>

{% endblock %}
